<h2>新規登録</h2>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admin, @user], local: true) do |f| %>

  <div class = "form-group">
    <%= f.label :ユーザー名, id: "name" %>
    <%= f.text_field :name, id: "name" %>
  </div>
  <div class = "form-group">
    <%= f.label :メールアドレス, id: "email" %>
    <%= f.email_field :email, id: "email" %>
  </div>
  <div class = "form-group">
    <%= f.label :パスワード, id: "password" %>
    <%= f.password_field :password, id: "password" %>
  </div>
  <div class = "form-group">
    <%= f.label :パスワード確認, id: "password_confirmation" %>
    <%= f.password_field :password_confirmation, id: "password_confirmation" %>
  </div>
  <div class = "form-group">
    <%= f.label :admin, t('view.admin') %>
    <%= f.check_box :admin, {}, "true", "false" %>
  </div>

  <%= f.submit "新規登録" %>
<% end %>
