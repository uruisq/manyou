<p>
  <strong><%= t('view.title') %>:</strong>
  <%= @task.title %><br>
  <strong><%= t('view.limit') %>:</strong>
  <%= @task.limit %><br>
  <strong><%= t('view.status') %>:</strong>
  <%= @task.status %><br>
  <strong><%= t('view.priority') %>:</strong>
  <%= @task.priority %><br>
